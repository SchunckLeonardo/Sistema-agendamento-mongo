<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todas as consultas</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
</head>

<body>

    <div class="container my-5">
        <h2 class="display-2 text-center">
            Todas as consultas
        </h2>
        <div class="row">
            <div class="col-lg-12">
                <% allAppointments.forEach(appo => { %>
                    <div class="card my-3">
                        <div class="card-body">
                          <h5 class="card-title"><%= appo.description %></h5>
                          <h6 class="card-subtitle mb-2 text-body-secondary"><%= appo.name %></h6>
                          <p class="card-text">
                            <p>
                                Email: <%= appo.email %>
                            </p>
                            <p>
                                CPF: <%= appo.cpf %>
                            </p>
                          </p>
                        </div>
                      </div>
                <% }) %>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <a href="/" class="btn btn-dark btn-lg w-100">Calend√°rio</a>
            </div>
            <div class="col-lg-6">
                <a href="/cadastro" class="btn btn-dark btn-lg w-100">Cadastrar nova consulta</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>